    "version": "0.2.0",
    "configurations": [
        {
            "name": "Odoo",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/odoo/odoo-bin",
            "console": "integratedTerminal",
            "args": [
                "--config=${workspaceFolder}/odoo.conf",
                "--addons-path=${workspaceFolder}/addons,${workspaceFolder}/odoo/addons,${workspaceFolder}/odoo/odoo/addons",
                "--db_host=postgres",
                "--database=odoo",
                "--db_user=odoo",
                "--db_password=odoo",
                "--db_port=5432",
                "--init=base",
                "--load-language=zh_CN",
            ]
        }
    ]
}